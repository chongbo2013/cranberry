#version %0

// Forwarded variables
in vec4 out_rgba;

// Output variables
out vec4 out_color;

// Uniform variables
uniform float uni_opacity;


void main()
{
    out_color = out_rgba * vec4(1.0, 1.0, 1.0, uni_opacity);
}
